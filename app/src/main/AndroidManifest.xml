<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dailyselfie.labs.coursera.dailyselfieapp" >

    <uses-permission
        android:name="android.permission.CAMERA"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera2"></uses-feature>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DailySelfieMain"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DailySelfieListing"
            android:label="@string/title_activity_daily_selfie_listing" >
        </activity>
        <activity
            android:name=".DailySelfiePreview"
            android:label="@string/title_activity_daily_selfie_preview" >
        </activity>
        <activity
            android:name=".DailySelfieAlarmActivity"
            android:label="@string/title_activity_daily_selfie_alarm" >
        </activity>
    </application>

</manifest>
